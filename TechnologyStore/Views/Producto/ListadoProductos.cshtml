@model IEnumerable<TechnologyStore.Models.usp_listar_productos_Result>
@using TechnologyStore.Models

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_LayoutProductos.cshtml";
}


<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <div class="container">
            <ul class="w3_short">
                <li>
                    <a href="@Url.Action("ListadoProductos", "Producto")">Inicio</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- top Productos -->
<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span>P</span>roductos
        </h3>
        <!-- //tittle heading -->
        <div class="row">
            <!-- product left -->
            <div class="agileinfo-ads-display col-lg-12">
                <div class="wrapper">
                    <!-- first section -->
                    @{
                        int numreg = 3;
                        var lis = Model.ToList();

                        int c = lis.Count();

                        int pagact = 0;
                        int regini = pagact * numreg;
                        int regfin = 0;

                        int mostrar = 0;
                    }
                    @while (true)
                    {

                        regfin = regini + numreg;

                        List<usp_listar_productos_Result> lista = new List<usp_listar_productos_Result>();
                        for (int i = regini; i < regfin; i++)
                        {
                            if (i == c) { break; }
                            lista.Add(lis[i]);
                        }
                        <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                            <div class="row">
                                @foreach (var item in lista)
                                {
                                    <div class="col-md-4 product-men">
                                        <div class="men-pro-item simpleCart_shelfItem">
                                            <div class="men-thumb-item text-center">
                                                <img src="~/Content/images/@(item.idProducto).jpg" alt="" width="100%" height="100%">
                                                <div class="men-cart-pro">
                                                    <div class="inner-men-cart-pro">
                                                        <a href="@Url.Action("DetalleProducto", "Producto", new { idProducto = item.idProducto })" class="link-product-add-cart">Ver</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="item-info-product text-center border-top mt-4">
                                                <h4 class="pt-1">
                                                    <a href="@Url.Action("DetalleProducto", "Producto", new { idProducto = item.idProducto })">@Html.DisplayFor(modelItem => item.desProducto)</a>
                                                </h4>
                                                <div class="info-product-price my-2">
                                                    <span class="span">@Html.DisplayFor(modelItem => item.nomCategoria)</span> <br />
                                                    <span class="item_price">S/.@Html.DisplayFor(modelItem => item.precioProducto)</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    mostrar++;
                                }
                                @{regini = mostrar;}
                            </div>
                        </div>
                        if (mostrar == c) { break; }
                    }
                    <!-- //first section -->

                </div>
            </div>
            <!-- //product left -->
        </div>
    </div>
</div>
